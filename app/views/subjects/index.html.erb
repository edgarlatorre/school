<h1><%= t("subjects.listing") %></h1>

<table class="table">
  <tr>
    <th><%= t("activerecord.attributes.subject.name") %></th>
    <th><%= t("activerecord.attributes.subject.description") %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @subjects.each do |subject| %>
  <tr>
    <td><%= subject.name %></td>
    <td><%= subject.description %></td>
    <td><%= link_to t('show'), subject %></td>
    <td><%= link_to t('edit'), edit_subject_path(subject) %></td>
    <td><%= link_to t('destroy'), subject, method: :delete, data: { confirm: t('are-you-sure') } %></td>
  </tr>
<% end %>
</table>

