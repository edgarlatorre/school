<h1><%= t "teachers.title" %> </h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teachers.each do |teacher| %>
  <tr>
    <td><%= teacher.name %></td>
    <td><%= teacher.age %></td>
    <td><%= link_to t('show'), teacher %></td>
    <td><%= link_to t('edit'), edit_teacher_path(teacher) %></td>
    <td><%= link_to t('destroy'), teacher, method: :delete, data: { confirm: t("are-you-sure") } %></td>
  </tr>
<% end %>
</table>

