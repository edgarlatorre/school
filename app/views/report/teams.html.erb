<h1>Relatório das <%= t("teams.listing") %></h1>
<p>Filtrar por: </p>
<form class="form-inline">
  <select name="filter">
    <option value="teacher">Professor</option>
    <option value="team">Turma</option>
  </select>
  <input name="name" type="text" placeholder="Nome">
  <button type="submit">Filtrar</button>
</form>
<% @teams.each do |team| %>
  <strong><%= team.name %></strong><br>
  Alunos:
  <ul>
    <% team.students.each do |student| %>
      <li><%= student.name %></li>
    <% end %>
  </ul>
  Matéria e Professor:
  <ul>
    <% team.lessons.each do |lesson| %>
      <li><%= lesson.subject.name %> - <%= lesson.teacher.name %></li>
    <% end %>
  </ul>
  <hr>
<% end %>
