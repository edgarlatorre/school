source 'https://rubygems.org'

gem 'rails', '3.2.11'
gem 'pg', :group => [:production]

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'compass-rails'
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'bootstrap-sass'

group :test, :development do
  gem "rspec-rails"
  gem 'sqlite3'
end

group :test do
  gem 'capybara'
  gem "guard-rspec"
end

